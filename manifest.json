{
  "name": "Tradingworks Extension",
  "description": "Extension to handle clock in!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "/assets/js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/clock-16.png",
      "32": "assets/images/clock-32.png",
      "48": "assets/images/clock-48.png",
      "128": "assets/images/clock-128.png"
    }
  },
  "icons": {
    "16": "assets/images/clock-16.png",
    "32": "assets/images/clock-32.png",
    "48": "assets/images/clock-48.png",
    "128": "assets/images/clock-128.png"
  }
}